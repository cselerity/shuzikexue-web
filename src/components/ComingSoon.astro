---
interface Feature {
  icon: string
  title: string
  description: string
}

interface Stat {
  number: string
  label: string
}

interface Props {
  badge: string
  icon: string
  title: string
  intro: string
  stats: Stat[]
  features: Feature[]
}

const { badge, icon, title, intro, stats, features } = Astro.props
---

<section class="py-8 md:py-12 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-orange-500 to-orange-400 rounded-full text-xs font-semibold text-white tracking-wider mb-6 shadow-lg shadow-orange-200">
      <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
      {badge}
    </div>

    <!-- Icon -->
    <div class="text-5xl md:text-7xl mb-6">{icon}</div>

    <!-- Title -->
    <h1 class="text-2xl md:text-4xl font-bold bg-gradient-to-r from-orange-600 via-orange-500 to-amber-500 bg-clip-text text-transparent mb-6">
      {title}
    </h1>

    <!-- Intro -->
    <p class="text-sm md:text-base text-gray-600 leading-relaxed mb-8 max-w-2xl mx-auto" set:html={intro} />

    <!-- Stats -->
    <div class="flex flex-wrap justify-center gap-6 md:gap-12 mb-10">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-2xl md:text-4xl font-bold bg-gradient-to-r from-orange-600 to-orange-400 bg-clip-text text-transparent">
            {stat.number}
          </div>
          <div class="text-xs md:text-sm text-gray-500 mt-1">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6 max-w-3xl mx-auto">
      {features.map((feature) => (
        <div class="bg-gray-50 rounded-xl p-5 md:p-6 border border-gray-100 text-left hover:shadow-md transition-shadow hover:-translate-y-1">
          <div class="text-2xl md:text-3xl mb-3">{feature.icon}</div>
          <h3 class="text-sm md:text-base font-semibold text-gray-800 mb-2">{feature.title}</h3>
          <p class="text-xs md:text-sm text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
